<%= simple_form_for [:admin, user] do |f| %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :admin, label: "Is an admin?" %>

	<header>
		<h2>Roles</h2>
	</header>	

	<table class="table form-horizontal roles">
		<% projects.each do |project| %>
			<tr>
				<th><%= label_tag dom_id(project), project.name, class: 'control-label' %></th>
				<td>
					<%= select_tag dom_id(project), options_for_select(roles,
							user.role_on(project)), name: "roles[#{project.id}]",
							include_blank: true, class: 'form-control' %>
				</td>
			</tr>
		<% end %>
	</table>
	<%= f.button :submit, class: "btn btn-primary" %>
<% end %>